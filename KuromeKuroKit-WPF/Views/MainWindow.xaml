                Content="1" />
            <Button
                Command="{Binding NavigateCommand}"
                CommandParameter="AboutView"
                Content="2" />
            <Button Content="3" />
        </StackPanel>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{StaticResource mainRegionName}" />
